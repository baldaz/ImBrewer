    <h5>Ingredients</h5>
  </div>
  <div id="content">
    <div class="bs-component">
      <ul class="nav nav-tabs">
      	<li class="active"><a href="#hops" data-toggle="tab">Hops</a></li>
      	<li><a href="#yeasts" data-toggle="tab">Yeasts</a></li>
      	<li><a href="#fermentables" data-toggle="tab">Fermentables</a></li>
