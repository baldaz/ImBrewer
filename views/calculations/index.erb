<% content_for :navigation do %>
<li><a href="/">Home</a></li> 
<li><a href="/recipes">Recipes</a></li>
<li><a href="/ingredients">Ingredients</a></li>
<li><a href="/styles">Styles</a></li>
<li class="active"><a href="/calculations">Calculations</a></li>
<% end %>
<div class="col-lg-12">
  <div class="page-header">
    <h5>Calculations</h5>
  </div>
  <div class="well bs-component">
    <form class="form-horizontal" action="" method="post" role="form">
      <fieldset>
	<legend>Specifications</legend>
	<div class="form-group">
	  <label for="style" class="col-xs-2 control-label">Style</label>
	  <div class="col-xs-2">
	    <select class="form-control" id="style">
	      <% @styles.each do |style| %>
	      <option><%= style.name %></option>
	      <% end %>
	    </select>
	  </div>
	  <label for="batch_size" class="col-xs-2 control-label">Batch</label>
	  <div class="col-xs-2">
	    <input class="form-control" id="batch_size" type="number" min="23" max="10000" value="23">
	  </div>
	  <label for="efficiency" class="col-xs-2 control-label">Efficiency</label>
	  <div class="col-xs-2">
	    <input class="form-control" id="efficiency" type="number" min="60" max="95" value="70">
	  </div>
	</div>
      </fieldset>
      <fieldset>
	<legend>Grain bill</legend>
	<div class="form-group">
	  <label for="fermentable_1" class="col-xs-2 control-label">Fermentable #1</label>
	  <div class="col-xs-2">
	    <select class="form-control" id="fermentable_1">
	      <option>Pilsener</option>
	      <option>Cara pils</option>
	      <option>Flaked corn</option>
	    </select>
	  </div>
	  <label for="kg_fermentable_1" class="col-xs-2 control-label">Kg</label>
	  <div class="col-xs-2">
	    <input type="text" class="form-control" id="kg_fermentable_1">
	  </div>
	</div>
	<div class="form-group">
	  <label for="fermentable_2" class="col-xs-2 control-label">Fermentable #2</label>
	  <div class="col-xs-2">
	    <select class="form-control" id="fermentable_2">
	      <option>Pilsener</option>
	      <option>Cara pils</option>
	      <option>Flaked corn</option>
	    </select>
	  </div>
	  <label for="kg_fermentable_2" class="col-xs-2 control-label">Kg</label>
	  <div class="col-xs-2">
	    <input type="text" class="form-control" id="kg_fermentable_2">
	  </div>
	</div>
	<div class="form-group">
	  <label for="fermentable_3" class="col-xs-2 control-label">Fermentable #3</label>
	  <div class="col-xs-2">
	    <select class="form-control" id="fermentable_3">
	      <option>Pilsener</option>
	      <option>Cara pils</option>
	      <option>Flaked corn</option>
	    </select>
	  </div>
	  <label for="kg_fermentable_3" class="col-xs-2 control-label">Kg</label>
	  <div class="col-xs-2">
	    <input type="text" class="form-control" id="kg_fermentable_3">
	  </div>
	</div>
      </fieldset>
      <fieldset>
	<legend>Hop bill</legend>
	<div class="form-group">
	  <label for="hop_name" class="col-xs-2 control-label">Hop name</label>
	  <div class="col-xs-2">
	    <select class="form-control" id="hop_name" >
	      <% @hops.each do |hop| %>
	      <option><%= hop.name %></option>
	      <% end %>
	    </select>
	  </div>
	</div>
      </fieldset>
  </form>
</div>
</div>

